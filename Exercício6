<!DOCTYPE html>
<html>
<head>
    <title>Verificador de Aprovação</title>
</head>
<body>
    <h1>Verificador de Aprovação</h1>
    
    <?php
    // Verifique se o formulário foi enviado
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        // Receba as três notas do formulário
        $nota1 = $_POST["nota1"];
        $nota2 = $_POST["nota2"];
        $nota3 = $_POST["nota3"];

        // Calcule a média aritmética simples
        $media = ($nota1 + $nota2 + $nota3) / 3;

        // Verifique se o aluno foi aprovado
        $aprovado = ($media >= 6);

        // Exiba o resultado
        echo "Nota 1: " . $nota1 . "<br>";
        echo "Nota 2: " . $nota2 . "<br>";
        echo "Nota 3: " . $nota3 . "<br>";
        echo "Média: " . number_format($media, 2, '.', '.') . "<br>";

        if ($aprovado) {
            echo "Situação: APROVADO";
        } else {
            echo "Situação: REPROVADO";
        }
    }
    ?>

    <form method="post" action="<?php echo $_SERVER["PHP_SELF"]; ?>">
        <label for="nota1">Nota 1:</label>
        <input type="number" step="0.01" name="nota1" required><br>
        <label for="nota2">Nota 2:</label>
        <input type="number" step="0.01" name="nota2" required><br>
        <label for="nota3">Nota 3:</label>
        <input type="number" step="0.01" name="nota3" required><br>
        <input type="submit" value="Verificar Aprovação">
    </form>
</body>
</html>
