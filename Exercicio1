    <?php
    if($_SERVER["REQUEST_METHOD"]=="POST"){
        $numero = $_POST["numero"];

        if($numero>0){
            echo "Número positivo";
        }
        elseif($numero<0){
            echo "Número negativo";
        }
        else{
            echo "Número igual a 0";
        }
    }
    ?>
   
