            <h2>Tabuada do número:</h2>
        <form>
           <input type="text" id="tab">
           <button onclick="enviar()">Enviar</button><br>
           <h3>Resultado</h3>
           <div id="resultado"></div>
        </form>
        </div>
        
        <?php
            function enviar(){
            $num = parseInt(document.getElementById("tab").value);
            $resposta = (document.getElementById("resultado").value);
            $tabuada='';

         for($count=1; $count<=10 ; $count++)
         
         $resultado+= $num*$count +"<br>";
         $tabuada += $num+" x "+$count+" = "+$resultado;
         $resposta.innerHTML = $tabuada;
     }
        ?>
